
#=================================Clase Conta==================================================
class Conta:
    polizas = []
    cantpolizas = 0;
    def __init__(self, empresa):
        self.name = empresa

    def __str__(self):
        return 'webos no hay String-Conta'
    
    def altaCta(self, numCta, nombreCta, natCta):
        pass

    def registra(self, pCon):
        polizas[cantpolizas] = pCon
        cantpolizas = cantpolizas+1
#=================================Clase Poliza================================================
class Poliza:
