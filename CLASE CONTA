        self.date = fecha
        self.code = cod
        cod = cod +1

    def abono(numCta, cantAb):
        pass
    def cargo(numCta, cantCar):
        pass


#=============================Clase ParteContable===============================================
class ParteContable:       
    def __init__(self, nombre, num):
        self.name = nombre
        self.code = num
    def __str__(self):
        return 'Aquí va la parte contable'

#=================Programa principal========
conta = Conta('MiEmpre S.A.')
